{
  "name": "bootstrap-npm-starter",
  "version": "1.4.0",
  "private": true,
  "description": "Demo project for building a Bootstrap powered site via npm.",
  "author": "mdo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twbs/bootstrap-npm-starter.git"
  },
  "bugs": {
    "url": "https://github.com/twbs/bootstrap-npm-starter/issues"
  },
  "homepage": "https://github.com/twbs/bootstrap-npm-starter#readme",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss/tisco.scss -o assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace assets/css/tisco.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css assets/css/tisco.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "color:tokens": "npx json-to-scss scss/tokens/color-space.json scss/tisco-scss/token/_color_token.scss --k='sq'",
    "typo:tokens": "npx json-to-scss scss/tokens/typo.json scss/tisco-scss/token/_typo_token.scss --k='sq'",
    "server": "sirv --port 3000",
    "brows": "npx browser-sync start -s --files 'scss/*' 'assets/css/tisco.css' '*.html'",
    "start": "npm-run-all --parallel watch brows",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "keywords": [
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "starter",
    "template"
  ],
  "dependencies": {
    "bootstrap": "^4.6.0",
    "bootstrap-icons": "^1.4.0",
    "browser-sync": "^2.26.14",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "bourbon": "^7.0.0",
    "compass-mixins": "^0.12.10",
    "json-to-scss": "^1.6.2",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.0.2",
    "sirv-cli": "^1.0.11",
    "stylelint": "^13.12.0",
    "stylelint-config-twbs-bootstrap": "^2.1.0"
  }
}
